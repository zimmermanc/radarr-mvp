# Environment variables for Docker Compose
# Copy this file to .env in the same directory and modify values

# PostgreSQL Configuration
POSTGRES_DB=radarr_dev
POSTGRES_USER=radarr
POSTGRES_PASSWORD=radarr_dev_password

# Redis Configuration (optional)
REDIS_PASSWORD=redis_dev_password

# Radarr Configuration
RADARR_API_KEY=your_radarr_api_key_here
JWT_SECRET=your_jwt_secret_change_in_production

# External Services (modify as needed)
PROWLARR_API_KEY=your_prowlarr_api_key
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminpass

# TMDB API (required for movie metadata)
TMDB_API_KEY=your_tmdb_api_key_here

# Directory Paths (adjust to your setup)
MOVIE_LIBRARY_PATH=./media/movies
DOWNLOAD_PATH=./media/downloads

# Logging
RUST_LOG=debug