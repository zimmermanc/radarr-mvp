# Production Environment Configuration for Radarr MVP
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgres://radarr:${POSTGRES_PASSWORD}@postgres:5432/radarr

# =============================================================================
# API Keys (Required)
# =============================================================================
# HDBits API key for torrent indexing
HDBITS_API_KEY=your_hdbits_api_key_here

# TMDB API key for movie metadata
TMDB_API_KEY=your_tmdb_api_key_here

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# =============================================================================
# Monitoring Credentials
# =============================================================================
GRAFANA_PASSWORD=your_secure_grafana_password_here

# =============================================================================
# Docker Registry (CI/CD)
# =============================================================================
DOCKER_USERNAME=your_docker_hub_username
DOCKER_PASSWORD=your_docker_hub_password_or_token

# =============================================================================
# Application Configuration
# =============================================================================
RUST_LOG=info
RUST_BACKTRACE=1
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# =============================================================================
# Security Configuration
# =============================================================================
# JWT secret for authentication (generate with: openssl rand -hex 64)
JWT_SECRET=your_jwt_secret_key_here

# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET=your_session_secret_here

# =============================================================================
# Download Client Configuration
# =============================================================================
# qBittorrent connection details
QBITTORRENT_URL=http://qbittorrent:8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=your_qbittorrent_password

# Download paths
DOWNLOAD_PATH=/downloads
COMPLETED_PATH=/completed

# =============================================================================
# File System Configuration
# =============================================================================
MOVIE_LIBRARY_PATH=/movies
TEMP_PATH=/tmp

# =============================================================================
# External Service URLs
# =============================================================================
PLEX_URL=http://plex:32400
PLEX_TOKEN=your_plex_token_here

# =============================================================================
# Performance Tuning
# =============================================================================
WORKER_THREADS=4
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_AUTO_DOWNLOAD=false
ENABLE_NOTIFICATIONS=true

# =============================================================================
# Notification Configuration
# =============================================================================
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here