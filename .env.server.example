# Radarr MVP Server Configuration Template
# For deployment to test server root@YOUR_SERVER_IP
# Copy this file to .env.production and update credentials

# Security Configuration (REQUIRED)
RADARR_API_KEY=your_secure_api_key_here_32_chars_min

# Server Configuration
RADARR_HOST=0.0.0.0
RADARR_PORT=7878
RADARR_MAX_CONNECTIONS=1000
RADARR_REQUEST_TIMEOUT=30

# Database Configuration (Update credentials)
DATABASE_URL=postgresql://radarr_user:secure_password_here@localhost:5432/radarr_prod
DATABASE_MAX_CONNECTIONS=20
DATABASE_CONNECT_TIMEOUT=30
DATABASE_LOG_QUERIES=false

# Prowlarr Integration (Update with your Prowlarr instance)
PROWLARR_BASE_URL=http://YOUR_SERVER_IP:9696
PROWLARR_API_KEY=your_prowlarr_api_key_here
PROWLARR_TIMEOUT=30
PROWLARR_RATE_LIMIT=60

# qBittorrent Integration (Update credentials)
QBITTORRENT_BASE_URL=http://YOUR_SERVER_IP:8080
QBITTORRENT_USERNAME=your_qbt_username
QBITTORRENT_PASSWORD=your_qbt_password

# CORS Configuration (Server IP)
CORS_ALLOWED_ORIGINS=http://YOUR_SERVER_IP:3000,http://YOUR_SERVER_IP:7878

# Logging Configuration (Server paths)
RUST_LOG=info
LOG_JSON_FORMAT=true
LOG_FILE=/var/log/radarr/radarr.log

# Security Headers
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data: https:; connect-src 'self'"

# Environment
ENVIRONMENT=production

# Media Paths (Update for your server)
MEDIA_ROOT=/mnt/media
DOWNLOAD_ROOT=/mnt/downloads