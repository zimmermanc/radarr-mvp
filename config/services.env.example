# ============================================
# Radarr MVP Services Configuration
# ============================================
# Copy this file to config/services.env and fill in your actual values
# NEVER commit services.env to version control!
# 
# This file centralizes ALL external service credentials and API keys
# ============================================

# ============================================
# CORE DATABASE
# ============================================
DATABASE_URL=postgresql://radarr:radarr@localhost:5432/radarr
TEST_DATABASE_URL=postgresql://radarr:radarr@localhost:5432/radarr_test
DATABASE_MAX_CONNECTIONS=10
DATABASE_TIMEOUT_SECONDS=30

# ============================================
# MOVIE DATABASES & METADATA
# ============================================

# The Movie Database (TMDB) - REQUIRED
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_API_READ_TOKEN=your_tmdb_read_access_token_here
TMDB_RATE_LIMIT_PER_SECOND=4
TMDB_CACHE_TTL_HOURS=24

# Trakt.tv OAuth - For trending/popular lists
# Register app at: https://trakt.tv/oauth/applications
TRAKT_CLIENT_ID=your_trakt_client_id_here
TRAKT_CLIENT_SECRET=your_trakt_client_secret_here
TRAKT_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob
TRAKT_ACCESS_TOKEN=
TRAKT_REFRESH_TOKEN=

# Watchmode - For streaming availability
# Get API key from: https://api.watchmode.com/
WATCHMODE_API_KEY=your_watchmode_api_key_here
WATCHMODE_CACHE_TTL_HOURS=48

# OMDb API - Optional, for additional metadata
# Get API key from: https://www.omdbapi.com/apikey.aspx
OMDB_API_KEY=

# ============================================
# TORRENT INDEXERS
# ============================================

# HDBits - Primary private tracker
# API Access (for automated searching)
HDBITS_USERNAME=your_hdbits_username
HDBITS_PASSKEY=your_hdbits_api_passkey

# HDBits Session Cookie (for scene group analysis)
# Get from browser DevTools after logging in
# Format: "PHPSESSID=xxx; uid=xxx; pass=xxx; cf_clearance=xxx"
HDBITS_SESSION_COOKIE=

# HDBits Analysis Settings
HDBITS_ANALYSIS_MAX_PAGES=100
HDBITS_ANALYSIS_RUN_MINUTES=15
HDBITS_ANALYSIS_BREAK_MINUTES=15
HDBITS_ANALYSIS_MAX_SEGMENTS=8
HDBITS_RATE_LIMIT_SECONDS=5

# Prowlarr Integration
PROWLARR_BASE_URL=http://localhost:9696
PROWLARR_API_KEY=your_prowlarr_api_key_here

# Other Indexers (Optional)
RARBG_API_KEY=
JACKETT_URL=http://localhost:9117
JACKETT_API_KEY=

# ============================================
# DOWNLOAD CLIENTS
# ============================================

# qBittorrent (Primary)
QBITTORRENT_HOST=http://localhost:8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminpass
QBITTORRENT_CATEGORY=radarr
QBITTORRENT_SAVE_PATH=/downloads/complete
QBITTORRENT_TEMP_PATH=/downloads/incomplete

# SABnzbd (Usenet)
SABNZBD_HOST=http://localhost:8085
SABNZBD_API_KEY=
SABNZBD_CATEGORY=movies
SABNZBD_PRIORITY=-100

# Transmission (Alternative)
TRANSMISSION_HOST=http://localhost:9091
TRANSMISSION_USERNAME=
TRANSMISSION_PASSWORD=
TRANSMISSION_RPC_PATH=/transmission/rpc

# Deluge (Alternative)
DELUGE_HOST=http://localhost:8112
DELUGE_PASSWORD=

# ============================================
# NOTIFICATION SERVICES
# ============================================

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
DISCORD_USERNAME=Radarr
DISCORD_AVATAR_URL=
DISCORD_MENTION_ROLE=

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_PARSE_MODE=HTML

# Slack
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#movies
SLACK_USERNAME=Radarr

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM=radarr@yourdomain.com
SMTP_TO=admin@yourdomain.com
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Pushover
PUSHOVER_USER_KEY=
PUSHOVER_API_TOKEN=
PUSHOVER_PRIORITY=0
PUSHOVER_SOUND=pushover

# Pushbullet
PUSHBULLET_API_KEY=
PUSHBULLET_DEVICE_ID=

# Gotify
GOTIFY_SERVER_URL=
GOTIFY_APP_TOKEN=
GOTIFY_PRIORITY=5

# ============================================
# MEDIA SERVERS
# ============================================

# Plex
PLEX_HOST=http://localhost:32400
PLEX_TOKEN=your_plex_token_here
PLEX_LIBRARY_SECTION=1
PLEX_UPDATE_LIBRARY=true

# Jellyfin
JELLYFIN_HOST=http://localhost:8096
JELLYFIN_API_KEY=
JELLYFIN_USER_ID=

# Emby
EMBY_HOST=http://localhost:8096
EMBY_API_KEY=

# Kodi
KODI_HOST=http://localhost:8080
KODI_USERNAME=kodi
KODI_PASSWORD=

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Datadog
DATADOG_API_KEY=
DATADOG_APP_KEY=
DATADOG_SITE=datadoghq.com

# ============================================
# FILE MANAGEMENT
# ============================================

# Root Paths
MOVIES_ROOT_PATH=/media/movies
DOWNLOADS_PATH=/downloads/complete
INCOMPLETE_DOWNLOADS_PATH=/downloads/incomplete
BACKUP_PATH=/backups/radarr
RECYCLE_BIN_PATH=/media/.recycle

# Import Settings
AUTO_IMPORT_ENABLED=true
DELETE_EMPTY_FOLDERS=true
CREATE_HARDLINKS=true
COPY_USING_HARDLINKS=true
IMPORT_EXTRA_FILES=true
EXTRA_FILE_EXTENSIONS=srt,sub,idx,nfo,jpg,png

# File Permissions
FILE_CHMOD=0644
FOLDER_CHMOD=0755
CHOWN_USER=
CHOWN_GROUP=

# ============================================
# QUALITY & RELEASE SETTINGS
# ============================================

# Quality Preferences
PREFERRED_QUALITY=1080p
MINIMUM_QUALITY=720p
MAXIMUM_QUALITY=2160p

# Size Limits (MB)
MIN_SIZE_MB=0
MAX_SIZE_MB=50000
PREFERRED_SIZE_MB=10000

# Release Preferences
PREFERRED_RELEASE_GROUPS=SPARKS,EVO,GECKOS,AMIABLE
IGNORED_RELEASE_GROUPS=
MUST_CONTAIN_KEYWORDS=
MUST_NOT_CONTAIN_KEYWORDS=CAM,TS,TC,SCREENER

# ============================================
# AUTHENTICATION & SECURITY
# ============================================

# Web UI Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ENABLE_AUTH=true
AUTH_METHOD=forms

# API Security
API_KEY=generate_secure_random_api_key_here
ENABLE_API_KEY_AUTH=true
API_RATE_LIMIT_PER_MINUTE=60

# Session Management
SESSION_SECRET=generate_random_session_secret_here
SESSION_TIMEOUT_MINUTES=60
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# Security Headers
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'"
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# ============================================
# ADVANCED SETTINGS
# ============================================

# System Resources
MAX_CONCURRENT_DOWNLOADS=3
MAX_CONCURRENT_IMPORTS=1
MAX_CONCURRENT_SEARCHES=5
WORKER_THREADS=4

# Rate Limiting (seconds)
INDEXER_RATE_LIMIT_SECONDS=5
TMDB_RATE_LIMIT_SECONDS=0.25
DOWNLOAD_CLIENT_POLL_INTERVAL=60

# Caching
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100
REDIS_URL=redis://localhost:6379/0

# Scheduled Tasks
RSS_SYNC_INTERVAL_MINUTES=15
LIBRARY_SCAN_INTERVAL_HOURS=24
BACKUP_INTERVAL_DAYS=7
CLEANUP_INTERVAL_DAYS=30

# ============================================
# FEATURE FLAGS
# ============================================

ENABLE_STREAMING_INTEGRATION=true
ENABLE_LIST_SYNC=true
ENABLE_RSS_SYNC=true
ENABLE_QUALITY_PROFILES=true
ENABLE_CUSTOM_FORMATS=true
ENABLE_RELEASE_PROFILES=true
ENABLE_IMPORT_LISTS=true
ENABLE_NOTIFICATIONS=true
ENABLE_WEBHOOKS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_UI_CALENDAR=true
ENABLE_UI_HISTORY=true
ENABLE_UI_QUEUE=true
ENABLE_AUTO_UPDATER=false

# ============================================
# DEVELOPMENT/DEBUG
# ============================================

ENVIRONMENT=production
DEBUG_MODE=false
VERBOSE_LOGGING=false
SQL_LOGGING=false
REQUEST_LOGGING=false
DISABLE_AUTH_DEV=false
MOCK_EXTERNAL_APIS=false
USE_TEST_DATA=false
FORCE_HTTPS=false

# Logging
RUST_LOG=info
RUST_BACKTRACE=1
LOG_FORMAT=json
LOG_FILE=/var/log/radarr/radarr.log
LOG_MAX_SIZE_MB=100
LOG_MAX_FILES=10

# ============================================
# DOCKER/CONTAINER SETTINGS
# ============================================

PUID=1000
PGID=1000
TZ=UTC
UMASK=022

# ============================================
# DEPLOYMENT SPECIFIC
# ============================================

# Production Server
PRODUCTION_HOST=192.168.0.138
PRODUCTION_SSH_USER=root
PRODUCTION_DEPLOY_PATH=/opt/radarr

# Staging Server
STAGING_HOST=
STAGING_SSH_USER=
STAGING_DEPLOY_PATH=

# ============================================
# NOTES & REMINDERS
# ============================================
# 1. Keep this file secure - it contains sensitive credentials
# 2. Never commit to version control (add to .gitignore)
# 3. Use strong, unique passwords for all services
# 4. Rotate API keys and passwords regularly
# 5. Back up this configuration to a secure location
# 6. Test changes in development before production
# 7. Monitor rate limits to avoid service bans
# ============================================